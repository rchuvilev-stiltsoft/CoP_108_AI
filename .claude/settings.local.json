{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(mvn clean:*)",
      "Bash(git checkout:*)",
      "Bash(mvn dependency:*)",
      "Bash(mvn compile:*)",
      "Bash(npm run build-dev:*)",
      "Bash(grep:*)",
      "Bash(git checkout:*)",
      "Bash(npm run build-prod:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(cp:*)",
      "Bash(npm test)",
      "Bash(javap:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.claude.com)",
      "Bash(claude --version)"
    ],
    "deny": [],
    "hooks": {
      "PostToolUse": [
        {
          "matcher": "Edit",
          "hooks": [
            {
              "type": "command",
              "command": "echo 'Hook worked, file saved and formatted' > hook_test.txt"
            }
          ]
        }
      ]
    }
  }
}